<script>
  class FormManager {
    private currentStep: number = 1;
    private totalSteps: number = 18;
    private formData: Record<string, any> = {};

    constructor() {
      this.init();
    }

    private init() {
      this.loadSavedData();
      this.bindEvents();
      this.updateUI();
    }

    // private bindEvents() {
    //   // Navigation buttons
    //   document.getElementById('nextBtn')?.addEventListener('click', () => this.nextStep());
    //   document.getElementById('prevBtn')?.addEventListener('click', () => this.prevStep());

    //   // Form field changes
    //   document.querySelectorAll('input, select').forEach(field => {
    //     field.addEventListener('change', () => this.saveCurrentStep());
    //     field.addEventListener('input', () => this.saveCurrentStep());
    //   });
    // }

    private bindEvents() {
      // Navigation buttons
      document.getElementById('nextBtn')?.addEventListener('click', () => this.nextStep());
      document.getElementById('prevBtn')?.addEventListener('click', () => this.prevStep());

      // Escuchamos el evento personalizado del canvas de la firma
      document.getElementById('campusForm')?.addEventListener('signatureupdated', () => this.saveCurrentStep());

      // Form field changes
      document.querySelectorAll('input, select').forEach(field => {
        field.addEventListener('change', () => this.saveCurrentStep());
        field.addEventListener('input', () => this.saveCurrentStep());
      });
    }

    private updateUI() {
      // Update progress
      this.updateProgress();

      // Show current step
      document.querySelectorAll('.step-content').forEach((step, index) => {
        if (index + 1 === this.currentStep) {
          step.classList.remove('hidden');
        } else {
          step.classList.add('hidden');
        }
      });

      // Update navigation
      this.updateNavigation();

      // Special handling for summary step
      if (this.currentStep === this.totalSteps) {
        this.generateSummary();
      }
    }

    private updateProgress() {
      const indicators = document.querySelectorAll('.w-3.h-3.rounded-full');
      indicators.forEach((indicator, index) => {
        const step = index + 1;
        indicator.className = `w-3 h-3 rounded-full transition-all duration-300 ${step < this.currentStep
            ? 'bg-success-500 scale-110'
            : step === this.currentStep
              ? 'bg-primary-500 scale-125 ring-4 ring-primary-500/30'
              : 'bg-slate-600 hover:bg-slate-500'
          }`;
      });

      // Update step counter
      const counter = document.querySelector('.text-center.text-slate-300.text-sm.font-medium.mb-6');
      if (counter) {
        counter.textContent = `${this.currentStep} de ${this.totalSteps}`;
      }
    }

    private updateNavigation() {
      const nextBtn = document.getElementById('nextBtn') as HTMLButtonElement;
      const prevBtn = document.getElementById('prevBtn') as HTMLButtonElement;

      // Previous button
      if (prevBtn) {
        prevBtn.disabled = this.currentStep === 1;
        prevBtn.className = `flex items-center px-6 py-3 rounded-lg font-medium transition-all duration-200 ${this.currentStep === 1
            ? 'text-slate-500 cursor-not-allowed'
            : 'bg-blue-500 text-slate-300 hover:text-white hover:bg-slate-700'
          }`;
      }

      // Next button
      if (nextBtn) {
        const canProceed = this.canProceedToNext();
        nextBtn.disabled = !canProceed;

        nextBtn.className = `flex items-center px-8 py-3 rounded-lg font-medium transition-all duration-200 transform hover:scale-105 ${canProceed
            ? this.currentStep === this.totalSteps
              ? 'bg-success-500 hover:bg-success-600 text-white shadow-lg'
              : 'bg-blue-500 hover:bg-primary-600 text-white shadow-lg'
            : 'bg-slate-600 text-slate-400 cursor-not-allowed'
          }`;

        // Update button text
        const buttonText = this.currentStep === this.totalSteps ? 'ENVIAR FORMULARIO' : 'SIGUIENTE';
        nextBtn.innerHTML = buttonText + (this.currentStep !== this.totalSteps ?
          '<svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>' : '');
      }
    }

    private canProceedToNext(): boolean {
      const currentStepElement = document.querySelector(`[data-step="${this.currentStep}"]`);
      if (!currentStepElement) return false;

      const requiredFields = currentStepElement.querySelectorAll('[required]');

      for (const field of requiredFields) {
        const input = field as HTMLInputElement;
        if (input.type === 'checkbox') {
          if (!input.checked) return false;
        } else {
          if (!input.value.trim()) return false;
        }
      }

      // Special validation for signature step
      if (this.currentStep === 15) {
        return (window as any).hasSignature?.() || false;
      }

      return true;
    }

    private nextStep() {
      if (this.currentStep < this.totalSteps && this.canProceedToNext()) {
        this.saveCurrentStep();

        if (this.currentStep === this.totalSteps) {
          this.submitForm();
          return;
        }

        this.currentStep++;
        this.updateUI();
        this.saveProgress();
      }
    }

    private prevStep() {
      if (this.currentStep > 1) {
        this.currentStep--;
        this.updateUI();
        this.saveProgress();
      }
    }

    private saveCurrentStep() {
      const currentStepElement = document.querySelector(`[data-step="${this.currentStep}"]`);
      if (!currentStepElement) return;

      const fields = currentStepElement.querySelectorAll('input, select');
      fields.forEach(field => {
        const input = field as HTMLInputElement;
        if (input.type === 'checkbox') {
          this.formData[input.name] = input.checked;
        } else {
          this.formData[input.name] = input.value;
        }
      });

      // Save signature if on signature step
      // if (this.currentStep === 14) {
      if (this.currentStep === this.totalSteps - 2 ) {
        this.formData['signature'] = (window as any).getSignatureData?.() || '';
      }

      localStorage.setItem('campusFormData', JSON.stringify(this.formData));
      this.updateNavigation();
    }

    private loadSavedData() {
      const saved = localStorage.getItem('campusFormData');
      if (saved) {
        this.formData = JSON.parse(saved);

        // Populate form fields
        Object.keys(this.formData).forEach(key => {
          const field = document.querySelector(`[name="${key}"]`) as HTMLInputElement;
          if (field) {
            if (field.type === 'checkbox') {
              field.checked = this.formData[key];
            } else {
              field.value = this.formData[key];
            }
          }
        });
      }

      // Load saved progress
      const savedStep = localStorage.getItem('campusFormStep');
      if (savedStep) {
        this.currentStep = parseInt(savedStep);
      }
    }

    private saveProgress() {
      localStorage.setItem('campusFormStep', this.currentStep.toString());
    }

    private generateSummary() {
      const summaryContent = document.getElementById('summaryContent');
      if (!summaryContent) return;

      const fieldLabels: Record<string, string> = {
        student_name: 'Nombre del estudiante',
        student_birthdate: 'Fecha de nacimiento',
        student_grade: 'Grado escolar',
        // parent_name: 'Nombre del padre/tutor',
        // relationship: 'Relación',
        // parent_phone: 'Teléfono',
        parent_email: 'Correo electrónico',
        address: 'Dirección',
        field_trips: 'Permisos de salidas',
        sports: 'Actividades deportivas',
        image_use: 'Uso de imagen',
        medication: 'Administración de medicamentos',
        allergies: 'Alergias/Condiciones médicas',
        emergency_contact: 'Contacto de emergencia',
        emergency_phone: 'Teléfono de emergencia',
        transportation: 'Transporte',
        accept_terms: 'Términos y condiciones',
        accept_privacy: 'Política de privacidad'
      };

      let summaryHTML = '';
      Object.keys(this.formData).forEach(key => {
        if (key !== 'signature' && this.formData[key] && fieldLabels[key]) {
          const value = this.formData[key] === true ? 'Sí' : this.formData[key] === false ? 'No' : this.formData[key];
          summaryHTML += `
            <div class="flex justify-between py-2 border-b border-slate-600">
              <span class="text-slate-300">${fieldLabels[key]}:</span>
              <span class="text-white font-medium">${value}</span>
            </div>
          `;
        }
      });

      if (this.formData.signature) {
        summaryHTML += `
          <div class="pt-4">
            <span class="text-slate-300">Firma digital:</span>
            <div class="mt-2 p-2 bg-white rounded">
              <img src="${this.formData.signature}" alt="Firma" class="max-w-full h-auto" />
            </div>
          </div>
        `;
      }

      summaryContent.innerHTML = summaryHTML;
    }

    private async submitForm() {
      const submitBtn = document.getElementById('nextBtn') as HTMLButtonElement;

      // Show loading state
      submitBtn.innerHTML = 'Enviando...';
      submitBtn.disabled = true;

      try {
        // Simulate API call
        await new Promise(resolve => setTimeout(resolve, 2000));

        // Clear saved data
        localStorage.removeItem('campusFormData');
        localStorage.removeItem('campusFormStep');

        // Show success message
        alert('¡Formulario enviado exitosamente! Recibirá una confirmación por correo electrónico.');

        // Reset form
        this.currentStep = 1;
        this.formData = {};
        document.querySelector('form')?.reset();
        this.updateUI();

      } catch (error) {
        alert('Error al enviar el formulario. Por favor, inténtelo nuevamente.');
        submitBtn.innerHTML = 'ENVIAR FORMULARIO';
        submitBtn.disabled = false;
      }
    }
  }

  // Initialize form manager when DOM is loaded
  document.addEventListener('DOMContentLoaded', () => {
    new FormManager();
  });
</script>