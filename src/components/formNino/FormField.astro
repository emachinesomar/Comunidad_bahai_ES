---
interface Props {
  label: string;
  name: string;
  type?: 'text' | 'email' | 'tel' | 'date' | 'select';
  required?: boolean;
  options?: string[];
  placeholder?: string;
  value?: string;
}

const {
  label,
  name,
  type = 'text',
  required = false, 
  options = [], 
  placeholder = '',
  value = ''
} = Astro.props;
---

<div class="space-y-2">
  <label for={name} class="block text-sm font-medium text-slate-200">
    {label}
    {required && <span class="text-red-400 ml-1">*</span>}
  </label>
  
  {type === 'select' ? (
    <select 
      id={name}
      name={name}
      required={required}
      class="w-full px-4 py-3 bg-slate-800 border border-slate-600 rounded-lg text-white placeholder-slate-400 focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-200"
    >
      <option value="">Seleccionar...</option>
      {options.map((option) => (
        <option value={option} selected={value === option}>{option}</option>
      ))}
    </select>
  ) : (
    <input 
      type={type}
      id={name}
      name={name}
      required={required}
      placeholder={placeholder}
      value={value}
      class="w-full px-4 py-3 bg-slate-800 border border-slate-600 rounded-lg text-white placeholder-slate-400 focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-200"
    />
  )}
</div>